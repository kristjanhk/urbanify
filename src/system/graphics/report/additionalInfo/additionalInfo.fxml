<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0" minWidth="400.0" prefHeight="400.0"
            prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="system.graphics.report.additionalInfo.Controller" styleClass="background">
    <center>
        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="40.0" right="40.0" top="20.0"/>
            </BorderPane.margin>
            <children>
                <TextField fx:id="companyName" promptText="company name">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </TextField>
                <Text fx:id="companyNameLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="company name"
                      styleClass="text19">
                    <VBox.margin>
                        <Insets left="20.0" top="6.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="invoiceNr" promptText="invoice nr">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </TextField>
                <Text fx:id="invoiceNrLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="invoice nr"
                      styleClass="text19">
                    <VBox.margin>
                        <Insets left="20.0" top="6.0"/>
                    </VBox.margin>
                </Text>
                <TextField fx:id="workerName" promptText="worker name">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </TextField>
                <Text fx:id="workerNameLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="worker name"
                      styleClass="text19">
                    <VBox.margin>
                        <Insets left="20.0" top="6.0"/>
                    </VBox.margin>
                </Text>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="cancel" mnemonicParsing="false" text="cancel" styleClass="bottomButton"/>
                <Button fx:id="ok" mnemonicParsing="false" text="ok" styleClass="bottomButton">
                    <HBox.margin>
                        <Insets left="30.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="40.0" right="40.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <Text fx:id="additionalInfo" strokeType="OUTSIDE" strokeWidth="0.0" text="additional info"
              BorderPane.alignment="CENTER" styleClass="topText">
            <BorderPane.margin>
                <Insets top="40.0"/>
            </BorderPane.margin>
        </Text>
    </top>
</BorderPane>
