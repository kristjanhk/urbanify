                <Button fx:id="cancel" alignment="CENTER" maxWidth="121.0" minWidth="121.0" mnemonicParsing="false"
                        onMousePressed="#doCancel" prefWidth="121.0" styleClass="bottomButton" text="cancel">
                    <HBox.margin>
                        <Insets right="40.0" top="40.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="next" alignment="CENTER" maxWidth="92.3" minWidth="92.3" mnemonicParsing="false"
                        onMousePressed="#doNext" prefWidth="92.3" styleClass="bottomButton" text="next">
                    <HBox.margin>
                        <Insets right="40.0" top="40.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="create" alignment="CENTER" maxWidth="92.3" minWidth="92.3" mnemonicParsing="false"
                        onMousePressed="#doNext" prefWidth="92.3" styleClass="bottomButton" text="create">
                    <HBox.margin>
                        <Insets top="40.0" />
                    </HBox.margin>
                </Button>
            </HBox>
            <BorderPane.margin>
                <Insets right="40.0" />
            </BorderPane.margin>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
    </right>
    <bottom>
        <BorderPane id="bottom" BorderPane.alignment="CENTER">
            <top>
                <Region maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" prefHeight="40.0"
                        prefWidth="40.0" BorderPane.alignment="CENTER" />
