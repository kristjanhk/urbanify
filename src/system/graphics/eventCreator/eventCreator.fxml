<BorderPane minHeight="600.0" minWidth="1000.0" prefHeight="900.0" prefWidth="1600.0" styleClass="background"
            xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="system.graphics.eventCreator.Controller">
    <top>
        <VBox prefHeight="123.0" prefWidth="1600.0" BorderPane.alignment="CENTER">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="topText" text="event creator">
