<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="600.0" minWidth="1000.0" prefHeight="900.0" prefWidth="1600.0"
            styleClass="background" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="system.graphics.eventCreator.Controller">
   <top>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <Text styleClass="topText" strokeType="OUTSIDE" strokeWidth="0.0" text="event creator">
            <VBox.margin>
               <Insets left="40.0" top="40.0"/>
            </VBox.margin>
         </Text>
         <TextField fx:id="nameYourEvent" styleClass="textField" minWidth="40.0"
                    promptText="name your event">
            <VBox.margin>
               <Insets left="40.0" right="40.0" top="40.0"/>
            </VBox.margin>
         </TextField>
      </VBox>
   </top>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <Region maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" VBox.vgrow="NEVER"/>
         <TextField fx:id="setDate" styleClass="textField" maxWidth="304.0" minWidth="304.0"
                    prefWidth="304.0" promptText="set date" VBox.vgrow="NEVER">
            <VBox.margin>
               <Insets right="40.0"/>
            </VBox.margin>
         </TextField>
         <TextField fx:id="setTime" styleClass="textField" maxWidth="304.0" minWidth="304.0"
                    prefWidth="304.0" promptText="set time">
            <VBox.margin>
               <Insets right="40.0" top="40.0"/>
            </VBox.margin>
         </TextField>
      </VBox>
   </right>
   <bottom>
      <BorderPane id="bottom" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <right>
             <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                 <Button fx:id="cancel" styleClass="buttonField" alignment="CENTER" maxWidth="121.0"
                         minWidth="121.0" mnemonicParsing="false" prefWidth="121.0" text="cancel">
                    <HBox.margin>
                        <Insets right="40.0" top="40.0"/>
                    </HBox.margin>
                 </Button>
                 <Button fx:id="next" styleClass="buttonField" alignment="CENTER" maxWidth="92.3"
                         minWidth="92.3" mnemonicParsing="false" prefWidth="92.3" text="next" onMousePressed="#vaheta">
                    <HBox.margin>
                        <Insets right="40.0" top="40.0"/>
                    </HBox.margin>
                 </Button>
             </HBox>
         </right>
      </BorderPane>
   </bottom>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <VBox prefHeight="200.0" prefWidth="100.0">
            <HBox prefHeight="136.0" prefWidth="664.0">
               <Button fx:id="deleteTicketField" styleClass="buttonField" maxWidth="70.5"
                       minWidth="70.5" mnemonicParsing="false" prefWidth="70.5" text="ó" textAlignment="CENTER">
                  <HBox.margin>
                     <Insets left="40.0" top="40.0"/>
                  </HBox.margin>
               </Button>
               <TextField fx:id="priceField" styleClass="textField" maxWidth="110.0"
                          minWidth="110.0" prefWidth="110.0" promptText="price">
                  <HBox.margin>
                     <Insets left="40.0" top="40.0"/>
                  </HBox.margin>
               </TextField>
               <TextField fx:id="ticketField" styleClass="textField" maxWidth="292.5"
                          minWidth="292.5" prefWidth="174.0" promptText="ticket type">
                  <HBox.margin>
                     <Insets left="40.0" top="40.0"/>
                  </HBox.margin>
               </TextField>
            </HBox>
            <Button fx:id="addTicketField" styleClass="buttonField" maxWidth="70.5" minWidth="70.5"
                    mnemonicParsing="false" prefWidth="70.5" text="ò" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="40.0" top="40.0"/>
               </VBox.margin>
            </Button>
         </VBox>
      </Pane>
   </left>
</BorderPane>
