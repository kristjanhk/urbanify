                    <Insets left="40.0" top="40.0" />
                </VBox.margin>
            </Text>
            <TextField fx:id="eventText" maxHeight="70.5" minHeight="70.5" minWidth="40.0" prefHeight="70.5"
                       promptText="name your event">
                <VBox.margin>
                    <Insets left="40.0" right="40.0" top="40.0" />
                </VBox.margin>
            </TextField>
            <Region maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="200.0" />
        </VBox>
    </top>
    <right>
        <VBox alignment="TOP_RIGHT" prefHeight="595.0" prefWidth="404.0" BorderPane.alignment="CENTER">
            <DatePicker fx:id="calendar" maxHeight="70.5" maxWidth="304.0" minHeight="70.5" minWidth="304.0"
                        prefHeight="70.5" prefWidth="304.0" promptText="dd.mm.yyyy" showWeekNumbers="false">
            </DatePicker>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text19" text="set date" wrappingWidth="284.0">
                <VBox.margin>
                    <Insets left="20.0" top="6.0" />
                </VBox.margin>
            </Text>
            <TextField fx:id="timeText" maxHeight="70.5" maxWidth="304.0" minHeight="70.5" minWidth="304.0"
                       prefHeight="70.5" prefWidth="304.0" promptText="hh:mm">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text19" text="set time" wrappingWidth="284.0">
                <VBox.margin>
                    <Insets left="20.0" top="6.0" />
                </VBox.margin>
            </Text>
            <HBox alignment="CENTER_RIGHT">
                <CheckBox alignment="CENTER" contentDisplay="TOP" maxHeight="70.5" maxWidth="304.0" minHeight="70.5"
                          minWidth="304.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="70.5"
                          prefWidth="304.0" text="open seating" textAlignment="RIGHT">
                    <font>
                        <Font size="36.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="40.0" />
                    </HBox.margin>
                </CheckBox>
                <VBox alignment="CENTER">
