                               prefHeight="70.5" prefWidth="121.0" />
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text19" text="max nr of seats"
                          textAlignment="CENTER" wrappingWidth="83.13671875">
                        <VBox.margin>
                            <Insets top="6.0" />
                        </VBox.margin>
                    </Text>
                </VBox>
            </HBox>
            <CheckBox alignment="CENTER" contentDisplay="TOP" maxHeight="71.0" maxWidth="366.0" minHeight="70.5"
                      minWidth="304.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="71.0"
