<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import system.graphics.common.FloorPlanPane?>
<BorderPane fx:id="borderPane" prefHeight="900.0" prefWidth="1600.0" styleClass="background"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="system.graphics.floorPlanner.Controller">
    <top>
        <VBox onMouseDragged="#handleStageLocationDrag" onMousePressed="#handleStageLocationOffset" prefHeight="123.0"
              prefWidth="1600.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="100.0">
                <Button mnemonicParsing="false" onMouseClicked="#handleStageMinimize" styleClass="barButton" text="→"
                        textAlignment="CENTER">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="maximizeButton" mnemonicParsing="false" onMouseClicked="#handleStageMaximize"
                        styleClass="barButton" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onMouseClicked="#handleStageClose" styleClass="barButton" text="←">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <TextField fx:id="floorPlanTextField" styleClass="floorplanName" promptText="new floorplan">
                <VBox.margin>
                    <Insets left="40.0" right="40.0"/>
                </VBox.margin>
            </TextField>
        </VBox>
    </top>
    <right>
        <VBox prefHeight="810.0" prefWidth="0.0" BorderPane.alignment="CENTER">
            <HBox prefHeight="92.0" prefWidth="355.0">
                <Region prefHeight="111.0" prefWidth="172.0"/>
                <MenuButton fx:id="floorPlans" alignment="CENTER" contentDisplay="CENTER" maxHeight="70.5"
                            maxWidth="1500" minHeight="70.5" minWidth="150.0" mnemonicParsing="false" prefHeight="70.5"
                            prefWidth="150.0">
                    <HBox.margin>
                        <Insets top="40.0"/>
                    </HBox.margin>
                </MenuButton>
                <Region minWidth="40.0" prefWidth="40.0"/>
                <MenuButton fx:id="floorTypes" alignment="CENTER" contentDisplay="CENTER" maxHeight="70.5"
                            maxWidth="150.0" minHeight="70.5" minWidth="150.0" mnemonicParsing="false" prefHeight="70.5"
                            prefWidth="150.0">
                    <items>
                        <MenuItem id="STAGE" mnemonicParsing="false" onAction="#handleFloorTypeSwitch"/>
                        <MenuItem id="SCREEN" mnemonicParsing="false" onAction="#handleFloorTypeSwitch"/>
                    </items>
                    <HBox.margin>
                        <Insets right="40.0" top="40.0"/>
                    </HBox.margin>
                </MenuButton>
            </HBox>
            <Region maxHeight="40.0" minHeight="40.0" prefHeight="40.0"/>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="355.0">
                <Region prefHeight="71.0" prefWidth="161.0"/>
                <Button fx:id="removeRow" mnemonicParsing="false" onAction="#removeRowAction" styleClass="buttonRound"
                        text="ô"/>
                <Region maxWidth="20.0" minWidth="20.0" prefHeight="0.0" prefWidth="20.0"/>
                <VBox alignment="CENTER">
                    <Text fx:id="rowCountText" styleClass="text35" text="0" textAlignment="CENTER" wrappingWidth="50.0">
                    </Text>
                    <Text fx:id="rowText" styleClass="text19" text="rows" textAlignment="CENTER" wrappingWidth="50.0">
                    </Text>
                </VBox>
                <Region maxWidth="20.0" minWidth="20.0" prefHeight="200.0" prefWidth="20.0"/>
                <Button fx:id="addRow" mnemonicParsing="false" onAction="#addRowAction" styleClass="buttonRound"
                        text="ò">
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <Region maxHeight="40.0" minHeight="40.0" prefHeight="40.0" prefWidth="463.0"/>
            <HBox alignment="CENTER" prefHeight="8.0" prefWidth="355.0">
                <Region prefHeight="73.0" prefWidth="166.0"/>
                <Button fx:id="removeSeat" mnemonicParsing="false" onAction="#removeColumnAction"
                        styleClass="buttonRound" text="ô"/>
                <Region maxWidth="20.0" minWidth="20.0" prefWidth="20.0"/>
                <VBox alignment="CENTER">
                    <Text fx:id="columnCountText" styleClass="text35" text="0" textAlignment="CENTER"
                          wrappingWidth="50.0">
                    </Text>
                    <Text fx:id="columnText" styleClass="text19" textAlignment="CENTER" wrappingWidth="50.0">
                    </Text>
                </VBox>
                <Region maxWidth="20.0" minWidth="20.0" prefHeight="200.0" prefWidth="20.0"/>
                <Button fx:id="addSeat" mnemonicParsing="false" onAction="#addColumnAction" styleClass="buttonRound"
                        text="ò">
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
            <Region minHeight="40.0" prefHeight="9999.0" prefWidth="523.0"/>
            <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="523.0">
                <Region minWidth="40.0"/>
                <Button fx:id="cancel" maxWidth="121.0" minWidth="121.0" mnemonicParsing="false" onAction="#doCancel"
                        prefWidth="121.0" styleClass="bottomButton">
                    <HBox.margin>
                        <Insets bottom="40.0"/>
                    </HBox.margin>
                </Button>
                <Region minWidth="40.0" prefHeight="200.0" prefWidth="40.0"/>
                <Button fx:id="save" maxWidth="121.0" minWidth="121.0" mnemonicParsing="false" onAction="#doSave"
                        prefWidth="121.0" styleClass="bottomButton">
                    <HBox.margin>
                        <Insets bottom="40.0"/>
                    </HBox.margin>
                </Button>
                <Region minWidth="40.0" prefHeight="200.0" prefWidth="40.0"/>
                <Button fx:id="create" maxWidth="121.0" minWidth="121.0" mnemonicParsing="false" onAction="#doCreate"
                        prefWidth="121.0" styleClass="bottomButton">
                    <HBox.margin>
                        <Insets bottom="40.0" right="40.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </right>
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Region minWidth="40.0" prefHeight="40.0" prefWidth="40.0"/>
            <FloorPlanPane fx:id="floorPlan" alignment="BOTTOM_CENTER" prefHeight="9998" prefWidth="9999"/>
        </HBox>
    </center>
</BorderPane>
