<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>

<BorderPane prefHeight="900.0" prefWidth="1600.0" styleClass="background" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="system.graphics.settings.Controller">
    <top>
        <VBox onMouseDragged="#handleStageLocationDrag" onMousePressed="#handleStageLocationOffset" prefHeight="123.0"
              prefWidth="1600.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="100.0">
                <Button onMouseClicked="#handleStageMinimize" mnemonicParsing="false" text="-" textAlignment="CENTER"
                        styleClass="barButton">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
                <Button onMouseClicked="#handleStageMaximize" mnemonicParsing="false" text="m" textAlignment="CENTER"
                        styleClass="barButton">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
                <Button onMouseClicked="#handleStageClose" mnemonicParsing="false" text="x" styleClass="barButton">
                    <HBox.margin>
                        <Insets right="1.0" top="1.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        <Text fx:id="settingsText" strokeType="OUTSIDE" strokeWidth="0.0" BorderPane.alignment="TOP_LEFT"
              styleClass="topText">
            <VBox.margin>
                <Insets left="70.0" top="40.0"/>
            </VBox.margin>
        </Text>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="BOTTOM_RIGHT">
            <BorderPane.margin>
                <Insets bottom="40.0" right="40.0"/>
            </BorderPane.margin>
            <Button fx:id="back" onMouseClicked="#doBack" mnemonicParsing="false" styleClass="bottomButton">
                <HBox.margin>
                    <Insets left="40.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </bottom>
    <center>
        <VBox BorderPane.alignment="TOP_RIGHT">
            <BorderPane.margin>
                <Insets left="40.0" top="40.0"/>
            </BorderPane.margin>
            <HBox alignment="CENTER_LEFT">
                <Text fx:id="pathText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text35">
                    <font>
                        <Font size="36.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </Text>
                <TextFlow onMouseClicked="#handleDirectoryChange" maxHeight="70.5" minHeight="70.5" prefHeight="70.5"
                          styleClass="textFlowNimi" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                    <Text fx:id="filepath" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text35">
                        <font>
                            <Font size="35.0"/>
                        </font>
                    </Text>
                </TextFlow>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets bottom="40.0" top="40.0"/>
                </VBox.margin>
                <MenuButton fx:id="language" mnemonicParsing="false">
                    <items>
                        <MenuItem mnemonicParsing="false" text="english" onAction="#handleLangSwitch"/>
                        <MenuItem mnemonicParsing="false" text="eesti keel" onAction="#handleLangSwitch"/>
                        <MenuItem mnemonicParsing="false" text="võro kiil" onAction="#handleLangSwitch"/>
                        <MenuItem mnemonicParsing="false" text="deutsch" onAction="#handleLangSwitch"/>
                        <MenuItem mnemonicParsing="false" text="pусский язык" onAction="#handleLangSwitch"/>
                    </items>
                    <HBox.margin>
                        <Insets right="40.0"/>
                    </HBox.margin>
                </MenuButton>
                <MenuButton fx:id="theme" mnemonicParsing="false">
                    <items>
                        <MenuItem mnemonicParsing="false" id="LIGHT" onAction="#handleThemeSwitch"/>
                        <MenuItem mnemonicParsing="false" id="DARK" onAction="#handleThemeSwitch"/>
                        <MenuItem mnemonicParsing="false" id="WARM" onAction="#handleThemeSwitch"/>
                    </items>
                </MenuButton>
            </HBox>
            <CheckBox fx:id="fullscreen" maxHeight="70.5" minHeight="70.5" mnemonicParsing="false" prefHeight="70.5">
                <font>
                    <Font size="35.0"/>
                </font>
            </CheckBox>
        </VBox>
    </center>
</BorderPane>
